<a href="/dns_records/refresh" class="btn btn-info" role="button">Refresh Zone</a>

<hr>

<%= form_with model: @dns_record do |form| %>
  <div class="row">
    <div class="col-md-3">
      <%= form.text_field :host_name, id: "host_name", class: "form-control", placeholder: "Host Name" %>
    </div>

    <div class="col-md-3">
      <%= form.text_field :ip_address, id: "ip_address", class: "form-control", placeholder: "IP Address" %>
    </div>

    <div class="col-md-3">
      <%= form.text_field :dns_zone_id, id: "dns_zone_id", class: "form-control", value: 1 %>
    </div>


    <div class="col-md-3">
      <div class="d-grid gap-4 d-md-block">
        <%= form.submit "Add", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>

<hr>


<p style="color: green"><%= notice %></p>
<h4>DNS Records</h4>
<div id="dns_records">

  <table class="table table-striped table-hover">
    <thead class="table-light">
    <tr>
      <th>User</th>
      <th>Zone</th>
      <th>Host name</th>
      <th>IP Address</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% @dns_records.each do |dns_record| %>
      <tr>
        <td><%= dns_record.user.name %></td>
        <td><%= dns_record.dns_zone.name %></td>
        <td><%= dns_record.host_name %></td>
        <td><%= dns_record.ip_address %></td>

        <td><%= link_to 'Delete', dns_record, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>
</div>